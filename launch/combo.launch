<launch>
    <arg name="robot" default="test"/>
    <arg name="reach_object" default="test"/>
    <arg name="config_name" default="test"/>

    <param name="visualize_results" value="false"/>
    <include file="$(find robot_reach_study)/launch/$(arg robot).launch"/>

    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher"/>

    <node name="robot_reach_study_node" pkg="robot_reach_study" type="robot_reach_study" output="screen" required="true">
      <rosparam command="load" file="$(find robot_reach_study)/input/$(arg reach_object).yaml"/>
      <param name="config_name" value="$(arg config_name)"/>
    </node>
    <node name="sample_mesh_server" pkg="robot_reach_study" type="sample_mesh_server" output="screen"/>

</launch>
